
<p id="notice"><%= notice %></p>

<%= form_tag(bikes_path, :method => "get")do %>
<%= text_field_tag :search, nil, :placeholder => "Search by bike name" %>
<%= submit_tag "Search" %>
<% end %>
<h1>Listing Bikes</h1>

<table id= "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><strong><h3><%= bike.title %></h3></h3><strong></td>
        <td><%= bike.description %></td>
        <td><strong><a href="/cart/<%=bike.id %>"><%= image_tag(bike.image_url, :class => 'list_image') %></a><strong></td>
        <td><strong><%= bike.price %><strong></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> <a href="/cart/<%=bike.id %>">Rent this Bike</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
